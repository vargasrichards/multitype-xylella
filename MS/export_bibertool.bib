  JOURNALTITLE = {Environmental Entomology},
  PAGES = {267--279},
  TITLE = {Dispersal of <i>Philaenus spumarius</i> (Hemiptera: Aphrophoridae), a Vector of <i>Xylella fastidiosa</i> , in Olive Grove and Meadow Agroecosystems},
  VOLUME = {50},
