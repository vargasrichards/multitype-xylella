  DATE = {2023},
  DOI = {10.1080/01431161.2023.2282404},
  ISSN = {13665901},
  ISSUE = {23},
  JOURNALTITLE = {International Journal of Remote Sensing},
  KEYWORDS = {Google Earth Engine,Olive classification,Sentinel optical and radar data,data fusion,random forest},
  PAGES = {7338--7364},
  TITLE = {Evaluating the potential of multi-temporal Sentinel-1 and Sentinel-2 data for regional mapping of olive trees},
